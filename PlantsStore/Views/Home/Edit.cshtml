@model PlantsStore.Models.Plant

@{
    ViewBag.Title = "Edit";
}

<h2>Рослина № @Model.Id</h2>
@using (Html.BeginForm())
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.NameOfSort, "Назва рослини")
        <br />
        @Html.EditorFor(m => m.NameOfSort)
        <br />
    </p>
    <p>
        @Html.LabelFor(m => m.Variety, "Вид")
        <br />
        @Html.EditorFor(m => m.Variety)
        <br />
    </p>
    <p>
        @Html.LabelFor(m => m.Price, "Ціна")
        <br />
        @Html.EditorFor(m => m.Price)
        <br />
    </p>
    <p><input type="submit" value="Відправити" /></p>
</fieldset>
}
